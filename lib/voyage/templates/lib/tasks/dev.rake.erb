if Rails.env.development? || Rails.env.test?
  require 'factory_bot'

  namespace :dev do
    desc 'Sample data for local development environment'
    task prime: 'db:setup' do
      include FactoryBot::Syntax::Methods

      <% if config[:using_devise] %>
        User.destroy_all

        create(:user, :admin)
        create(:user)
      <% else %>
        Resource.destroy_all

        create(:resource)
      <% end %>
    end
  end
end
